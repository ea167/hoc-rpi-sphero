{
  "name": "hour-of-code-rpi-node-sphero",
  "version": "0.1.0",
  "private": true,
  "browserify-shim": {
      "jquery": "global:jQuery"
  },
  "browserify": {
      "transform": [
          "browserify-shim"
      ]
  },
  "scripts": {
      "start": "node ./bin/www",
      "debug": "node-debug ./bin/www",
      "build": "browserify src/browser/index.js -o public/js/browser.js",
      "watch": "watchify -v -d src/browser/index.js -o public/js/browser.js",
      "EricComments"  : " // run on the command-line by  $ npm run-script build   (or watch, etc...)  ",
      "EricComments-2": " // node-debug is equivalent to launching node --debug-brk and opening node-inspector "
  },
  "dependencies": {
      "bluetooth-serial-port": "^1.2.6",
      "body-parser": "~1.13.2",
      "cookie-parser": "~1.3.5",
      "cylon": "^1.2.0",
      "cylon-sphero": "^0.21.0",
      "debug": "~2.2.0",
      "express": "~4.13.1",
      "hjs": "~0.0.6",
      "mdns": "^2.2.10",
      "morgan": "~1.6.1",
      "serialport": "^2.0.5",
      "serve-favicon": "~2.3.0",
      "ws": "^0.8.0"
  },
  "devDependencies": {
    "browserify": "^10.2.4",
    "browserify-shim": "^3.8.9",
    "watchify": "^3.2.3"
  }
}
